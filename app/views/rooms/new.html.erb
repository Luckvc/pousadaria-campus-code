<h1>Adicionar Quarto</h1>

<% if(@room.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @room.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @room, url: inn_rooms_path ) do |form| %>
  <div>
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :double_beds %>
    <%= form.number_field :double_beds %>
  </div>
  <div>
    <%= form.label :single_beds %>
    <%= form.number_field :single_beds %>
  </div>
  <div>
    <%= form.label :capacity, 'HÃ³spedes' %>
    <%= form.number_field :capacity %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :bathrooms %>
    <%= form.number_field :bathrooms %>
  </div>
  <div>
    <%= form.check_box :kitchen %>
    <%= form.label :kitchen %>
  </div>
  <div>
    <%= form.submit 'Cadastrar' %>
  </div>
<% end %>
