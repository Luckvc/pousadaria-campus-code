  <div>
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :double_beds %>
    <%= form.number_field :double_beds %>
  </div>
  <div>
    <%= form.label :single_beds %>
    <%= form.number_field :single_beds %>
  </div>
  <div>
    <%= form.label :capacity, 'HÃ³spedes' %>
    <%= form.number_field :capacity %>
  </div>
